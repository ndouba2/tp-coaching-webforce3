# Utilisez l'image de base Ubuntu 20.04
FROM ubuntu:20.04

# Mise à jour de la liste des paquets et installation des dépendances
RUN apt-get update && \
    apt-get install -y python3 python3-pip

# Définition du répertoire de travail pour l'application
WORKDIR /app

# Copie du fichier requirements.txt dans le conteneur
COPY requirements.txt .

# Installation des dépendances Python
RUN pip3 install -r requirements.txt

# Copie du code de l'application dans le conteneur
COPY . .

# Définition des variables d'environnement pour Flask
ENV FLASK_APP=app.py
ENV FLASK_RUN_HOST=0.0.0.0

# Exposition du port 5000 pour l'application web
EXPOSE 5000

# Commande pour démarrer l'application
CMD ["flask", "run"]
